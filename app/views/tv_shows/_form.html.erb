<%= form_with(model: @show) do |form| %>
    <% if @show.errors.any? %>
        <% @show.errors.full_messages.each do |message| %>
            <div><%= message %></div>
        <% end %>
    <% end %>
    <div>
        <%= form.label :name %>
    </div>
    <div>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :description %>
    </div>
    <div>
        <%= form.text_area :description %>
    </div>

    <div>
        <%= form.label :image_path %>
    </div>
    <div>
        <%= form.text_field :image_path %>
    </div>

    <div>
        <%= form.label :seasons %>
    </div>
    <div>
        <%= form.number_field :seasons %>
    </div>

    <div>
        <%= form.label :genres %>
    </div>
    <div>
        <%= form.collection_select(:genre_ids, Genre.all, :id, :name, {}, {multiple: true}) %>
    </div>
    <%= form.submit %>
<% end %>