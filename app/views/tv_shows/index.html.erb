<h1>Shows you've add to your Watch List!</h1>

<% @shows.each do |show| %>
    <div>
        <h2><%= show.name %></h2>
    </div>

    <div>
        <p>Seasons: <%= show.seasons %></p>
    </div>

    <div>
        <p>Description: <%= show.description %></p>
    </div>

    <div>
        <%= link_to tv_show_path(show) do %>
            <%= image_tag("#{show.image_path}", height: '200') %>
        <% end %>
    </div>
<% end %>