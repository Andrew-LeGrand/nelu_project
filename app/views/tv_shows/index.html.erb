<h1>Shows you've add to your Watch List!</h1>

<% @shows.each do |show| %>
    <div>
        <h2><%= show.name %></h2>
    </div>
    <div>
        <%= show.description %>
    </div>
    <div>
        <p>Seasons: <%= show.seasons %></p>
    </div>
    <div>
        <%= image_tag show.image_path %>
    </div>
<% end %>